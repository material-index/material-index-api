# Material Index API Gateway - Production Environment Configuration
# Copy this file to your production server as .env

# Environment
NODE_ENV=production
PORT=3001

# Supabase Configuration (Production)
SUPABASE_URL=https://likqvubiqoooqxrhvlsn.supabase.co
SUPABASE_ANON_KEY=your_production_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key_here

# API Configuration
API_VERSION=v1
API_BASE_URL=https://api.material-index.com

# Security
JWT_SECRET=your_production_jwt_secret_here
API_KEY_SECRET=your_production_api_key_secret_here

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Redis Configuration (Production)
REDIS_URL=redis://your-production-redis:6379
REDIS_PASSWORD=your_redis_password_here

# CORS Configuration (Production)
CORS_ORIGIN=https://material-index.com,https://api.material-index.com,https://docs.material-index.com

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Database Configuration
DATABASE_URL=https://likqvubiqoooqxrhvlsn.supabase.co

# Performance
CLUSTER_MODE=true
MAX_CONNECTIONS=100
